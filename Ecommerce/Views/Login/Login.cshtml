
@using Microsoft.AspNetCore.Http;
@model Usuario

@{ ViewBag.Title = "LOGIN - ";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/login.css" rel="stylesheet" />
    <style>
        .sucesso {
            font-family: 'PT Sans Narrow', sans-serif;
            color: greenyellow;
            font-weight: bolder;
            font-weight: 600;
            font-size: 25px;
            letter-spacing: 3px;
            text-transform: uppercase;
            animation-name: mensagem;
            animation-duration: 4s;
            animation-timing-function: ease-out;
            opacity: 0;
        }

        .falha {
            font-family: 'PT Sans Narrow', sans-serif;
            color: red;
            font-weight: bolder;
            font-weight: 600;
            font-size: 25px;
            letter-spacing: 3px;
            text-transform: uppercase;
            animation-name: mensagem;
            animation-duration: 4s;
            animation-timing-function: ease-out;
            opacity: 0;
        }

        @@keyframes mensagem {
            10% {
                opacity: 0.7;
            }

            20% {
                opacity: 0.8;
            }

            30% {
                opacity: 0.9;
            }

            60% {
                opacity: 1;
            }

            100% {
                opacity: 1;
            }
        }
    </style>
</head>
<body>
    <section>
        <div class="box">
            <div class="container">
                <div class="form">
                    <h2>Faça Login</h2>
                    <form asp-action="Login" method="POST">

                        <div class="inputBox">
                            <input asp-for="email" class="control-label" name="email" placeholder="E-mail" required="required" type="email" />
                            <span asp-validation-for="email" class="text-danger"></span>
                        </div>

                        <div class="inputBox">
                            <input asp-for="senha" class="form-control" name="senha" placeholder="Senha" required="required" type="password" />
                            <span asp-validation-for="senha" class="text-danger"></span>
                        </div>

                        <div class="inputBox">
                            <input type="submit" value="Entrar">
                        </div>

                        <div class="sucesso">
                            <p>@ViewBag.Sucesso </p>
                        </div>

                        <div class="falha">
                            <p>@ViewBag.Falha </p>
                        </div>                       

                        <p class="forget">Esqueceu sua senha ? <a href="#">Clique Aqui</a></p>

                        <p class="forget">Não possui uma conta ? <a href="~/Login/cadastroUsuario">Cadastre-se</a></p>
                    </form>
                </div>
            </div>
        </div>
    </section>

</body>
</html>