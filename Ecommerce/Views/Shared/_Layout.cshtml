@using Microsoft.AspNetCore.Http;

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] BS </title>
    <link rel="stylesheet" href="~/css/navbar.css" />
    <link rel="icon" type="image/png" href="~/images/ham.png"> <!-- ICONE NAVEGADOR -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'> <!-- ICONES BOXICONS -->
</head>
<body>
    <!--HEADER-->
    <header>
        <nav class="nav-bar">
            <div class="logo">
                <h1>Burguershop</h1>
            </div>
            <div class="nav-list">
                <ul>
                    <li class="nav-item"> <a href="~/Home/HomePage" class="nav-link">Início<i class="bx bx-home"></i></a> </li>
                    <li class="nav-item"><a href="~/Cardapio/Cardapio" class="nav-link">Cardápio<i class="bx bx-food-menu"> </i> </a> </li>
                    <li class="nav-item"><a href="~/Carrinho/Carrinho" class="nav-link">Meus pedidos<i class="bx bx-cart"></i></a></li>
                    <li class="nav-item"><a href="~/Atendimento/Atendimento" class="nav-link">Contato<i class='bx bxs-chat'></i></i></a></li>

                    <li class="nav-item">
                        <a class="nav-link">Minha Conta <i class="bx bxs-user"></i></a>
                        <ul>
                            <li class="nav-item"><a href="~/Login/Login" class="nav-link">Login <i class="bx bx-log-in"></i></a></li>

                            <li class="nav-item"><a href="~/Login/cadastroUsuario" class="nav-link">Cadastrar <i class="bx bxs-user-plus"></i></a></li>
                        </ul>
                    </li>
                </ul>
            </div>

            <!--BARRA DE PESQUISA (SEARCHBOX)-->
            <form action="/Produto/buscarProduto" enctype="multipart/form-data" method="post">
                <div class="input-search">
                    <input type="text" name="nomeProduto" id="nomeProduto" placeholder="Pesquisar">
                    <button class="icon-lupa" type="submit" value="Buscar">
                        <i class="bx bx-search"></i>
                    </button>
                </div>
            </form>

            <!-- VIEW BAG LOGIN (APÓS LOGIN)-->
            <div class="right-items">
                <div class="login-text">
                    @if (Context.Session.GetInt32("id_usuarios") != null)
                    {
                        ViewBag.Login = @Context.Session.GetString("nome_usuario");
                        <span>@ViewBag.Login</span>                        
                        <a asp-action="Logout"> <img class="icones-img" title="Sair" src="~/images/icone-logout.png" id="logo2"></a>
                    }
                </div>
            </div>

            <!--MENU HAMBURGUER -->
            <div class="mobile-menu-icon">
                <button onclick="menuShow()">
                    <img class="icon" src="~/images/menu_white_36dp.svg" alt="" />
                </button>
            </div>
        </nav>
        <div class="mobile-menu">
            <ul>
                <li class="nav-item"><a href="~/Home/HomePage" class="nav-link">Início<i class="bx bx-home"></i></a></li>
                <li class="nav-item"><a href="~/Cardapio/Cardapio" class="nav-link">Cardápio<i class="bx bx-food-menu"> </i></a></li>
                <li class="nav-item"> <a href="~/Carrinho/Carrinho" class="nav-link">Meus pedidos<i class="bx bx-cart"></i></a></li>
                <li class="nav-item"><a href="~/Login/Login" class="nav-link">Login<i class="bx bx-log-in"></i></a></li>
                <li class="nav-item"><a href="~/Login/cadastroUsuario" class="nav-link">Cadastrar<i class="bx bxs-user-plus"></i></a></li>               
            </ul>
        </div>
    </header>

    <script src="~/js/site.js"></script>

    @RenderBody()
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
