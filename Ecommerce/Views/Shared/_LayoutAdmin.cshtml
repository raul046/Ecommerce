@using Microsoft.AspNetCore.Http;
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] BS</title>
    <link rel="stylesheet" href="~/css/layoutadmin.css" />
    <link rel="icon" type="image/png" href="~/images/ham.png"> <!-- ICONE NAVEGADOR -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'> <!-- ICONES BOXICONS -->
</head>
<body>
    <!--HEADER ADMIN-->
    <header>
        <nav class="nav-bar">
            <button class="btn" onclick="openNav()">
                <i class="fa-solid fa-bars fa-2x"> </i>
            </button>

            <div class="nav-list">
                <ul>
                    <li class="nav-item"> <a href="~/Home/HomePage" class="nav-link">Início<i class="bx bx-home"></i></a> </li>
                </ul>
            </div>

            <!--VIEW BAG LOGIN -->
            <div class="right-items">
                <div class="login-text">
                    @if (Context.Session.GetInt32("id_usuarios") != null)
                    {
                        ViewBag.Login = @Context.Session.GetString("nome_usuario");
        <span>@ViewBag.Login</span>
                        <a asp-action="Logout"><img class="icones-img" title="Sair" src="~/images/icone-logout.png" id="logo2"></a>}
                </div>
            </div>
        </nav>
    </header>

    <!--MENU HAMBURGUER ADMIN-->
    <div id="myNav" class="overlay">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>

        <div class="overlay-content">
            <a href="~/Cardapio/Cardapio">Cardápio</a>
            <a href="~/Cardapio/Registro_Cardapio">Registrar Lanches</a>
            <a href="~/Login/Listar_Usuarios">Usuários Registrados</a>
            <a href="~/Cardapio/Listar_Cardapio">Lanches Registrados</a>
        </div>
    </div>

    <script src="~/js/menuadmin.js"></script>
    @RenderBody()
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
